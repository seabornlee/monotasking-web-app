@font-face {
  font-family: "{{ fontName }}";
  src: {{{ src }}};
}

.icon {
  display: inline-block;
  vertical-align: middle;
}

.icon:before {
  font-family: {{fontName}} !important;
  font-style: normal;
  font-weight: normal !important;
}

{{# each codepoints }}
.{{ ../classPrefix }}{{ @key }}:before {
  content: "\\{{ this }}";
}
{{/ each }}
